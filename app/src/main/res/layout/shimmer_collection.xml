<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_16">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fcItemProfileImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@android:color/transparent" />

    <TextView
        android:id="@+id/fcItemName"
        android:layout_width="120dp"
        android:layout_height="14dp"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="14dp"
        android:background="@color/light_grey"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_name"
        app:layout_constraintStart_toEndOf="@id/fcItemProfileImage"
        app:layout_constraintTop_toTopOf="@id/fcItemProfileImage" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fpcItemImage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:background="@color/light_grey"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fcItemProfileImage"
        app:shapeAppearanceOverlay="@style/RoundCorner" />

    <TextView
        android:id="@+id/fpcQuantityPhoto"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/fpcItemImage"
        app:layout_constraintStart_toStartOf="@id/fpcItemImage" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/fpcQuantityPhoto"
        app:layout_constraintStart_toStartOf="@id/fpcQuantityPhoto" />


</androidx.constraintlayout.widget.ConstraintLayout>