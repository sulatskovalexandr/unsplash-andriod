<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.screens.photo_details_screen.PhotoDetailsFragment">

    <ImageView
        android:id="@+id/details_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/plant5" />

    <TextView
        android:id="@+id/details_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24"
        android:layout_marginBottom="8dp"
        android:text="location"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/details_image"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/details_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_image"
        tools:src="@color/black" />

    <TextView
        android:id="@+id/details_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_name"
        app:layout_constraintBottom_toBottomOf="@id/details_profile_image"
        app:layout_constraintStart_toEndOf="@id/details_profile_image"
        app:layout_constraintTop_toTopOf="@id/details_profile_image"
        tools:text="Name" />


    <ImageView
        android:id="@+id/btn_details_bookmark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="@dimen/margin_24"
        android:src="@drawable/baseline_bookmark_border_24"
        app:layout_constraintBottom_toBottomOf="@id/details_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/details_profile_image" />

    <ImageView
        android:id="@+id/btn_details_favorite"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:src="@drawable/baseline_favorite_border_24"
        app:layout_constraintEnd_toStartOf="@id/btn_details_bookmark"
        app:layout_constraintTop_toTopOf="@+id/btn_details_bookmark" />

    <ImageView
        android:id="@+id/btn_details_downland"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:src="@drawable/baseline_download_24"
        app:layout_constraintEnd_toStartOf="@id/btn_details_favorite"
        app:layout_constraintTop_toTopOf="@+id/btn_details_favorite" />

    <View
        android:id="@+id/_details_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/details_profile_image" />

    <TextView
        android:id="@+id/details_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_24"
        android:text="Камера"
        app:layout_constraintStart_toStartOf="@id/_details_line1"
        app:layout_constraintTop_toBottomOf="@id/_details_line1" />

    <TextView
        android:id="@+id/tv_details_camera_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/details_camera"
        app:layout_constraintTop_toBottomOf="@id/details_camera"
        tools:text="Camera info" />

    <TextView
        android:id="@+id/details_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_24"
        android:text="Фокусное растояние"
        app:layout_constraintStart_toStartOf="@id/_details_line1"
        app:layout_constraintTop_toBottomOf="@id/tv_details_camera_info" />

    <TextView
        android:id="@+id/tv_details_focus_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/details_focus"
        app:layout_constraintTop_toBottomOf="@id/details_focus"
        tools:text="Focus info" />

    <TextView
        android:id="@+id/details_iso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24"
        android:text="ISO"
        app:layout_constraintStart_toStartOf="@id/tv_details_focus_info"
        app:layout_constraintTop_toBottomOf="@id/tv_details_focus_info" />

    <TextView
        android:id="@+id/tv_details_iso_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/details_iso"
        app:layout_constraintTop_toBottomOf="@id/details_iso"
        tools:text="ISO info" />


</androidx.constraintlayout.widget.ConstraintLayout>