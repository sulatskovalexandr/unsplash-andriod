<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_16">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fucItemImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundCorner"
        tools:src="@drawable/image1"
        android:background="@color/image_bg"/>

    <TextView
        android:id="@+id/fucQuantityPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:background="@drawable/round_corner_collection_name_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/pf_text_photo"
        android:textColor="@color/text_button"
        app:layout_constraintBottom_toBottomOf="@id/fucItemImage"
        app:layout_constraintStart_toStartOf="@id/fucItemImage" />

    <TextView
        android:id="@+id/fucCollectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_corner_collection_name_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Name of collection"
        android:textColor="@color/text_button"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/fucQuantityPhoto"
        app:layout_constraintStart_toStartOf="@id/fucQuantityPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>