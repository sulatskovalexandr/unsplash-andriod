<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fcsItemImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:adjustViewBounds="true"
        android:background="@color/shimmer_bg"
        android:paddingBottom="@dimen/margin_16"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundCorner" />

    <TextView
        android:id="@+id/fcsQuantityPhoto"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/fcsItemImage"
        app:layout_constraintStart_toStartOf="@id/fcsItemImage" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/fcsQuantityPhoto"
        app:layout_constraintStart_toStartOf="@id/fcsQuantityPhoto" />


</androidx.constraintlayout.widget.ConstraintLayout>